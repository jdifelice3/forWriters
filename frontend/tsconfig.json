{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "useDefineForClassFields": true,

    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    /* Vite defaults */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Type safety */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    

    /* Optional: only if you use TS path aliases */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client"]
  },

  "include": ["src", "src/types", "src/api"]
}
