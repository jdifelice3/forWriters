{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["env.d.ts","src","src/types"],
  "exclude": ["node_modules"]
}